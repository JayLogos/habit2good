<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dim_black_50"
    >
    <ImageView
        android:id="@+id/iv_effect_cash"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:visibility="visible"
        android:src="@drawable/eventeffect1_1"
        />
    <ImageView
        android:id="@+id/iv_prize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/df_event"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/mt20"
        android:layout_marginRight="@dimen/mt20"
        android:scaleType="fitXY"
        android:visibility="invisible"
        />
    <RelativeLayout
        android:id="@+id/back_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:visibility="visible"
        >
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_boom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:src="@drawable/boom_start"
        />
    <RelativeLayout
        android:id="@+id/front_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        >
    </RelativeLayout>
</RelativeLayout>
