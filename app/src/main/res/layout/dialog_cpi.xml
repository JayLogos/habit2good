<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingTop="@dimen/mt15"
            >
            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="ifContentScrolls"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/mt15"
                    android:paddingLeft="@dimen/mt15"
                    android:paddingRight="@dimen/mt15"
                    >
                    <LinearLayout
                        android:id="@+id/layer_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:id="@+id/iv_icon"
                            android:layout_width="@dimen/mt50"
                            android:layout_height="@dimen/mt50"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/mt10"
                            >
                            <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="title"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/black"
                                />
                            <TextView
                                android:id="@+id/tv_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="desc"
                                android:paddingLeft="@dimen/mt5"
                                android:layout_marginTop="@dimen/mt5"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/text_desc"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="@dimen/mt10"
                                >
                                <LinearLayout
                                    android:id="@+id/layer_coin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    >
                                    <TextView
                                        android:id="@+id/tv_coin"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textColor="@color/dialog_desc"
                                        android:layout_marginLeft="@dimen/mt5"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/layer_gold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginTop="@dimen/mt5"
                                    >

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/ic_gpoint25" />
                                    <TextView
                                        android:id="@+id/tv_gold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textColor="@color/text_red"
                                        android:layout_marginLeft="@dimen/mt5"
                                        />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layer_wide"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:id="@+id/iv_wide"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:layout_marginBottom="@dimen/mt10"
                            />
                        <TextView
                            android:id="@+id/tv_wtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="title"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/tv_wdesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="desc"
                            android:paddingLeft="@dimen/mt5"
                            android:layout_marginTop="@dimen/mt5"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/text_desc"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/mt10"
                            >
                            <LinearLayout
                                android:id="@+id/layer_wcoin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                >
                                <TextView
                                    android:id="@+id/tv_wcoin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="@color/dialog_desc"
                                    android:layout_marginLeft="@dimen/mt5"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/layer_wgold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="@dimen/mt5"
                                >

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/ic_gpoint25" />
                                <TextView
                                    android:id="@+id/tv_wgold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/text_red"
                                    android:layout_marginLeft="@dimen/mt5"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_sub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_marginTop="@dimen/mt10"
                        android:textColor="@color/text_red"
                        android:text="@string/cpi_run_sub"
                        />
                    <LinearLayout
                        android:id="@+id/desc_layer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/mt10"
                        android:layout_marginTop="@dimen/mt10"
                        android:orientation="vertical"
                        >
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/mt15"
            >
            <Button
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_b_ok"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"
                android:text="@string/cpi_go"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>