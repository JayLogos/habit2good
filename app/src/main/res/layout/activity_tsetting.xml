<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_bar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/title_setting"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="true"
                android:src="@drawable/back1"
                android:layout_centerInParent="true"
                />
            <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_trans"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="true"
                android:src="@drawable/info1"
                android:layout_centerInParent="true"
                />
            <Button
                android:id="@+id/btn_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_trans"
                />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="@dimen/mt10"
        android:background="@color/background"
        >
        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_version"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/mt5"
            >
            <TextView
                android:id="@+id/btn_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/mt30"
                android:text="@string/user"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/mt30"
                android:text=" &amp; "
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
            <TextView
                android:id="@+id/btn_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/mt30"
                android:text="@string/privacy"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@color/background"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="@dimen/mt10"
            android:paddingLeft="@dimen/mt10"
            android:paddingBottom="@dimen/mt10"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_round_layer"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minHeight="@dimen/mt36"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/mt20"
                    android:paddingRight="@dimen/mt20"
                    android:paddingTop="@dimen/mt10"
                    android:paddingBottom="@dimen/mt10"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/mt30"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cash_pop_alarm"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/text_default"
                            />
                        <ToggleButton
                            android:id="@+id/toggle_alarm"
                            android:layout_width="@dimen/mt36"
                            android:layout_height="@dimen/mt20"
                            android:textOff=""
                            android:textOn=""
                            android:checked="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/btn_toggle"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/background"
                        >
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/mt36"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/mt20"
                    android:paddingTop="@dimen/mt10"
                    android:paddingRight="@dimen/mt20"
                    android:paddingBottom="@dimen/mt10"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/mt30">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/ad_pop_up"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/text_default" />

                        <ToggleButton
                            android:id="@+id/toggle_ad"
                            android:layout_width="@dimen/mt36"
                            android:layout_height="@dimen/mt20"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/btn_toggle"
                            android:checked="false"
                            android:textOff=""
                            android:textOn="" />
                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/background"
                        >
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_autocash_store"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/trans_layer"
                    android:minHeight="@dimen/mt36"
                    android:paddingLeft="@dimen/mt20"
                    android:paddingTop="@dimen/mt10"
                    android:paddingRight="@dimen/mt20"
                    android:paddingBottom="@dimen/mt10"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/mt30"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/autogpoint_charge"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/text_default" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/mt20"
                        android:layout_height="@dimen/mt20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_right1"
                        android:scaleType="fitXY" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_round_layer"
                android:layout_marginTop="@dimen/mt5"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:id="@+id/btn_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/mt36"
                    android:background="@drawable/trans_layer"
                    android:paddingLeft="@dimen/mt20"
                    android:paddingRight="@dimen/mt20"
                    android:paddingTop="@dimen/mt10"
                    android:paddingBottom="@dimen/mt10"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/mt30"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/my_profile"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/text_default"
                            />
                        <TextView
                            android:id="@+id/tv_import_my_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_desc"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="@dimen/mt20"
                        android:layout_height="@dimen/mt20"
                        android:background="@drawable/btn_right1"
                        android:scaleType="fitXY"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/background"
                        >
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btn_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/mt36"
                    android:background="@drawable/trans_layer"
                    android:paddingLeft="@dimen/mt20"
                    android:paddingRight="@dimen/mt20"
                    android:paddingTop="@dimen/mt10"
                    android:paddingBottom="@dimen/mt10"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:minHeight="@dimen/mt30"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/notice"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/text_default"
                            />
                        <TextView
                            android:id="@+id/tv_notice_cnt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/mt5"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:gravity="center"
                            android:textColor="@color/text_red"
                            android:text="99"
                            />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="@dimen/mt20"
                        android:layout_height="@dimen/mt20"
                        android:background="@drawable/btn_right1"
                        android:scaleType="fitXY"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/background"
                        >
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btn_faq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/mt36"
                    android:background="@drawable/trans_layer"
                    android:paddingLeft="@dimen/mt20"
                    android:paddingRight="@dimen/mt20"
                    android:paddingTop="@dimen/mt10"
                    android:paddingBottom="@dimen/mt10"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:minHeight="@dimen/mt30"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/faq"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/text_default"
                            />
                        <TextView
                            android:id="@+id/tv_faq_cnt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/mt5"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:gravity="center"
                            android:textColor="@color/text_red"
                            android:text="99"
                            />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="@dimen/mt20"
                        android:layout_height="@dimen/mt20"
                        android:background="@drawable/btn_right1"
                        android:scaleType="fitXY"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/background"
                        >
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btn_support"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/mt36"
                    android:background="@drawable/trans_layer"
                    android:paddingLeft="@dimen/mt20"
                    android:paddingRight="@dimen/mt20"
                    android:paddingTop="@dimen/mt10"
                    android:paddingBottom="@dimen/mt10"
                    >
                    <ImageView
                        android:layout_width="@dimen/mt20"
                        android:layout_height="@dimen/mt20"
                        android:background="@drawable/btn_right1"
                        android:scaleType="fitXY"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/mt30"
                        android:text="@string/support"
                        android:gravity="center_vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/text_default"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_round_layer"
                android:layout_marginTop="@dimen/mt5"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:id="@+id/btn_transfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/mt36"
                    android:background="@drawable/trans_layer"
                    android:paddingLeft="@dimen/mt20"
                    android:paddingRight="@dimen/mt20"
                    android:paddingTop="@dimen/mt10"
                    android:paddingBottom="@dimen/mt10"
                    >
                    <ImageView
                        android:layout_width="@dimen/mt20"
                        android:layout_height="@dimen/mt20"
                        android:background="@drawable/btn_right1"
                        android:scaleType="fitXY"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:paddingRight="@dimen/mt15"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/account_transfer"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/text_default"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/account_transfer_import"
                            android:textColor="@color/text_desc"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/background"
                        >
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btn_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/mt36"
                    android:background="@drawable/trans_layer"
                    android:paddingLeft="@dimen/mt20"
                    android:paddingRight="@dimen/mt20"
                    android:paddingTop="@dimen/mt10"
                    android:paddingBottom="@dimen/mt10"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/mt30"
                        android:text="@string/out"
                        android:gravity="center_vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/text_default"
                        />
                    <ImageView
                        android:layout_width="@dimen/mt20"
                        android:layout_height="@dimen/mt20"
                        android:background="@drawable/btn_right1"
                        android:scaleType="fitXY"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>