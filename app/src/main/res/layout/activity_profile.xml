<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/background"
    >
    <requestFocus/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_bar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/my_profile"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="true"
                android:src="@drawable/back1"
                android:layout_centerInParent="true"
                />
            <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_trans"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="true"
                android:src="@drawable/info1"
                android:layout_centerInParent="true"
                />
            <Button
                android:id="@+id/btn_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_trans"
                />
        </RelativeLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/mt15"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/circle_image"
                    android:layout_width="@dimen/space_circle_menu_size"
                    android:layout_height="@dimen/space_circle_menu_size"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/space_16dp"
                    android:layout_marginBottom="@dimen/space_16dp"
                    android:cropToPadding="false"
                    android:src="@drawable/profile_default_image"
                    app:civ_border_color="@color/md_grey_200"
                    app:civ_border_width="@dimen/space_2dp"
                    app:layout_constraintBottom_toTopOf="@id/divider5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="36dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/mt15"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/id"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/tv_cpid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_16dp"
                        android:layout_weight="2"
                        android:text="@string/id"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="36dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/mt15"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_profile_nickname"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <EditText
                        android:id="@+id/et_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_16dp"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:layout_weight="5"
                        android:maxLength="20"
                        android:text="@string/my_nickname"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/md_grey_700" />

                    <Button
                        android:id="@+id/btn_check_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/normal_elevation"
                        android:enabled="false"
                        android:text="@string/check_nickname_btn"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="36dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/mt5"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/mt15"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="@string/year_of_birth"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="36dp"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:background="@drawable/select_text"
                        android:gravity="center_vertical"
                        >
                        <Spinner
                            android:id="@+id/spinner_year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:elevation="1dp"
                            />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:elevation="2dp"
                            android:src="@drawable/btn_down1"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="36dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/mt5"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/mt15"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="@string/area"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="36dp"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:background="@drawable/select_text"
                        android:gravity="center_vertical"
                        >
                        <Spinner
                            android:id="@+id/spinner_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:elevation="1dp"
                            />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:elevation="2dp"
                            android:src="@drawable/btn_down1"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="36dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/mt5"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/mt15"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="@string/gender"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        />
                    <RadioGroup
                        android:id="@+id/rbg_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        >
                        <RadioButton
                            android:id="@+id/rb_gender_1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:button="@null"
                            android:background="@drawable/radio_button_i"
                            android:layout_marginRight="@dimen/mt5"
                            />
                        <TextView
                            android:id="@+id/tv_gender_1"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:text="@string/male"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />
                        <RadioButton
                            android:id="@+id/rb_gender_2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:button="@null"
                            android:background="@drawable/radio_button_i"
                            android:layout_marginRight="@dimen/mt5"
                            />
                        <TextView
                            android:id="@+id/tv_gender_2"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:text="@string/female"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="36dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/mt5"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/mt15"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="@string/marriage"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        />
                    <RadioGroup
                        android:id="@+id/rbg_marriage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        >
                        <RadioButton
                            android:id="@+id/rb_marriage_1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:button="@null"
                            android:background="@drawable/radio_button_i"
                            android:layout_marginRight="@dimen/mt5"
                            />
                        <TextView
                            android:id="@+id/tv_marriage_1"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:text="@string/single"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />
                        <RadioButton
                            android:id="@+id/rb_marriage_2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:button="@null"
                            android:background="@drawable/radio_button_i"
                            android:layout_marginRight="@dimen/mt5"
                            />
                        <TextView
                            android:id="@+id/tv_marriage_2"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:text="@string/married"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/mt5"
                    android:gravity="center_vertical"
                    android:minHeight="36dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/mt15"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="@string/partner_code"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/tv_partner_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:lines="1"
                        android:maxLines="1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/et_partner_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:ellipsize="none"
                        android:hint="@string/input_partner_code"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLines="1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/text_default"
                        android:textColorHint="@color/text_hint" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_import_partner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_desc"
                    android:layout_marginTop="@dimen/mt5"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12dp"
                    android:paddingLeft="@dimen/mt15"
                    android:paddingRight="@dimen/mt15"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mt10"
        >
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_sign_join"
            android:textAllCaps="false"
            android:text="@string/confirm"
            android:layout_marginTop="@dimen/mt20"
            android:textColor="@color/text_default"
            />
    </RelativeLayout>

</LinearLayout>