<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="false"
    android:background="@color/background"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_bar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/signup"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="true"
                android:src="@drawable/back1"
                android:layout_centerInParent="true"
                />
            <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_trans"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="true"
                android:src="@drawable/info1"
                android:layout_centerInParent="true"
                />
            <Button
                android:id="@+id/btn_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_trans"
                />
        </RelativeLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/mt15"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/id"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        />
                    <EditText
                        android:id="@+id/et_cpid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/make_id"
                        android:layout_weight="2"
                        android:imeOptions="actionDone"
                        android:lines="1"
                        android:maxLines="1"
                        android:inputType="text"
                        android:ellipsize="none"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/text_default"
                        android:textColorHint="@color/text_hint"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:text="@string/import_id"
                        android:textColor="@color/text_desc"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/recommend_layer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/mt10"
                    android:visibility="invisible"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recommend_id"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        />
                    <TextView
                        android:id="@+id/recommend_id1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/mt5"
                        android:paddingLeft="@dimen/mt20"
                        android:text=""
                        android:textColor="@color/text_recommend"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        />
                    <TextView
                        android:id="@+id/recommend_id2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/mt5"
                        android:paddingLeft="@dimen/mt20"
                        android:text=""
                        android:textColor="@color/text_recommend"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/mt20"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/partner_code"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        />
                    <EditText
                        android:id="@+id/et_partner_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/input_partner_code"
                        android:layout_weight="2"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/text_default"
                        android:textColorHint="@color/text_hint"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_import_partner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_desc"
                    android:layout_marginTop="@dimen/mt5"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/mt60"
                android:layout_gravity="bottom"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/mt30"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|left"
                    >
                    <TextView
                        android:id="@+id/tv_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/user"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_weight="1"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical|right"
                        android:layout_weight="1"
                        >
                        <ToggleButton
                            android:id="@+id/toggle_check_user"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/check_box"
                            android:textOn=""
                            android:textOff=""
                            android:checked="false"
                            />
                        <TextView
                            android:id="@+id/tv_user_agree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/agree"
                            android:textColor="@color/text_hint"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_marginLeft="@dimen/mt5"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/mt30"
                    android:layout_marginTop="@dimen/mt5"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|left"
                    >
                    <TextView
                        android:id="@+id/tv_privacy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/privacy"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_weight="1"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical|right"
                        android:layout_weight="1"
                        >
                        <ToggleButton
                            android:id="@+id/toggle_check_privacy"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/check_box"
                            android:textOn=""
                            android:textOff=""
                            android:checked="false"
                            />
                        <TextView
                            android:id="@+id/tv_privacy_agree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/agree"
                            android:textColor="@color/text_hint"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_marginLeft="@dimen/mt5"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/mt30"
                    android:layout_marginTop="@dimen/mt5"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|left"
                    >
                    <TextView
                        android:id="@+id/tv_age14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/age_14"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_weight="1"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical|right"
                        android:layout_weight="1"
                        >
                        <ToggleButton
                            android:id="@+id/toggle_check_age14"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/check_box"
                            android:textOn=""
                            android:textOff=""
                            android:checked="false"
                            />
                        <TextView
                            android:id="@+id/tv_age14_agree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/agree"
                            android:textColor="@color/text_hint"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_marginLeft="@dimen/mt5"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:padding="@dimen/mt15"
        >
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:background="@drawable/button_sign_join"
            android:textAllCaps="false"
            android:enabled="false"
            android:textColor="@color/text_desc"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
    </LinearLayout>
</LinearLayout>