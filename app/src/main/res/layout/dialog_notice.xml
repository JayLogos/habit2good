<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/mt10"
    android:background="@color/dim_black_50"
    android:gravity="center"
    >
    <WebView
        android:id="@+id/webView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    </WebView>
    <RelativeLayout
        android:id="@+id/btn_layer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_bar"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:id="@+id/box_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            >
            <Button
                android:id="@+id/btn_check"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/check_box_n"
                />
            <TextView
                android:id="@+id/tv_today"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:text="@string/not_today"
                android:layout_marginLeft="5dp"
                android:textColor="@color/bg_yello"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btn_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/exit1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            />

    </RelativeLayout>
</LinearLayout>
